{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}"
        }
		  ,
		  {
			"name": "Launch Firefox",
			"type": "firefox",
			"request": "launch",
			"url": "https://localhost:4200",
			"webRoot": "${workspaceFolder}/client"
        },
		  {
			"type": "firefox",
			"request": "attach",
			"preLaunchTask": "npm: start", 
			"name": "firefox ng serve",
			"url": "http://localhost:4200/",
			"webRoot": "${workspaceFolder}"
	 
		 },
    ]
}