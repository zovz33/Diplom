<UserControl x:Class="PrimeTableware.WPF.CustomControls.NavigationButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrimeTableware.WPF.CustomControls" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" x:Name="NavCC" >
    <RadioButton Style="{StaticResource NavigationButton}" Command="{Binding Path=Command, ElementName=NavCC}" GroupName="{Binding Path=GroupName, ElementName=NavCC}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="40">
            <iconPacks:PackIconMaterial Margin="20 0 0 0" Kind="{Binding Path=Icon,ElementName=NavCC}" Height="20" Width="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Margin="15 0 0 0" Text="{Binding Path=Text,ElementName=NavCC}" Width="auto" Style="{x:Null}"  HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </StackPanel>
    </RadioButton>
</UserControl>
