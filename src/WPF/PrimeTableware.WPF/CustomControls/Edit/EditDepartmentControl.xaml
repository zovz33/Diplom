<UserControl x:Class="PrimeTableware.WPF.CustomControls.Edit.EditDepartmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="White"
             mc:Ignorable="d" HorizontalAlignment="Center" VerticalAlignment="Center" Height="250" Width="500">
    <Grid>
        <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0">
            <TextBlock Text="Название отдела"/>
            <TextBox Name="NameBlock" Text="{Binding DepartmentName}" Width="300"/>
        </StackPanel>
        <Button Grid.Row="1" Content="Применить" Command="{Binding AddNewDepartment}"
                CommandParameter="{Binding ElementName=AddNewDepartmentWnd}"/>
    </Grid>
</UserControl>
